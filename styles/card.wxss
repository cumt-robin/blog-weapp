.card-title {
  font-size: 36rpx;
  color: #333;
  width: 100%;
  display: block;
  padding-bottom: 20rpx;
  font-weight: 700;
}

/* 首页文章卡片 */
.card-article {
  text-align: center;
  border-bottom:2rpx solid #d8d8d8;
  padding-bottom: 40rpx;
}
.card-article .img-poster {
  width: 100%;
  height: 200px;
}

/* 分类卡片 */
.card-category {
  position: relative;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}
.card-category .card-category__name {
  display: block;
  text-align: center;
  font-size: 28rpx;
  padding-bottom: 8rpx;
}

.img-category {
  width: 100%;
  height: 240rpx;
}

.badge-category {
  position:absolute;
  top:0px;
  right:0px;
}

.badge-category .van-badge {
  padding: 0;
  overflow: visible;
}

/* 评论卡片 */
.card-comment-wrap {
  position: relative;
  padding: 0 12rpx;
}

.card-comment-wrap .van-cell {
  padding: 20rpx 8rpx;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 18rpx 24rpx rgba(7, 17, 27, 0.06);
}

.card-comment {
  display: flex;
  text-align: left;
}

.img-comment-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
}

.comment-info {
  flex: 1;
  margin-left: 8rpx;
  display: inline-block;
  vertical-align: top;
}

.comment-user {
  color:#5079b7;
  font-size: 32rpx;
}

.comment-time {
  display: block;
  font-size: 24rpx;
}

.comment {
  color: #333;
  display:block;
  padding-bottom: 8rpx;
}

/* 回复卡片 */
.card-reply {
  text-align: left;
  padding:20rpx 0;
  border-bottom:2rpx solid #eee;
}

.img-reply-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 100%;
}

.card-reply-list {
  border-top: 2rpx solid #ccc;
}

.reply-info {
  display:inline-block;
  vertical-align:top;
  margin-left: 8rpx;
  font-size:24rpx;
}

.reply-time {
  display:inline-block;
  vertical-align:top;
  font-size:24rpx;
  margin-left: 8rpx;
}

.reply {
  display: block;
  color: #333;
}