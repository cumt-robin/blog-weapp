.wemark_wrapper{
	margin: 0 20rpx;
	font-size: 32rpx;
	line-height: 1.8em;
}
.wemark_block_h1{
	font-size: 40rpx;
	font-weight: 700;
	text-align: center;
	margin: 1em 0;
}
.wemark_block_h1 .wemark_inline_text {
	position: relative;
	display: inline-block;
	padding-bottom: 8rpx;
}
.wemark_block_h1 .wemark_inline_text::after {
	content: "";
	position: absolute;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 4rpx;
	background-color: #418efb;
}
.wemark_block_h2{
	font-size: 36rpx;
	font-weight: 600;
	padding-bottom:.5em;
	margin-top: 1em;
	margin-bottom: 1em;
	border-bottom: 2rpx solid #f0f0f0;
}
.wemark_block_h3{
	font-size: 32rpx;
	font-weight: 600;
	margin-top: 1em;
	margin-bottom: 1em;
}
.wemark_block_h4,
.wemark_block_h5,
.wemark_block_h6{
	font-weight: 600;
	margin-top: 1em;
	margin-bottom: 1em;
}
.wemark_block_p{
	margin-top:1em;
	margin-bottom:1em;
}
.wemark_block_video{
	margin-top:1em;
	margin-bottom:1em;
	width:100%;
}
.wemark_block_blockquote_p{
	margin-top: 1em;
	margin-bottom: 1em;
	padding: 20rpx;
	font-size: 28rpx;
	background: #f0f0f0;
	border-left: 10rpx solid #e0e0e0;
}
.wemark_block_ul_li_p::before{
	content:'• ';
}
.wemark_block_ul_li_ul_li_p::before,
.wemark_block_ol_li_ul_li_p::before{
	content:'◦ ';
}
.wemark_block_ul_li_ul_li_p,
.wemark_block_ul_li_ol_li_p,
.wemark_block_ol_li_ul_li_p,
.wemark_block_ol_li_ol_li_p{
	padding-left: 1em;
}
.wemark_block_ul_li_p:last{
	margin-bottom:1em;
}
.wemark_block_code{
	display: block;
	padding:20rpx;
	font-size:28rpx;
	line-height: 1.5em;
	border:2rpx solid #f0f0f0;
	white-space: pre;
	overflow: auto;
	background-color: #474949;
	color: #d1d9e1;
}
.wemark_block_table{
	width: 100%;
	border-spacing: 0;
	border-collapse: collapse;
}
.wemark_block_table_tr{
	display: flex;
}
.wemark_wrapper_richtext .wemark_block_table_tr{
	display: table-row;
}
.wemark_inline_table_th,
.wemark_inline_table_td{
	flex:1;
	padding: 10rpx;
	font-size: 28rpx;
	word-break: break-all;
	border: 2rpx solid #e0e0e0;
}
.wemark_wrapper_richtext .wemark_inline_table_th,
.wemark_wrapper_richtext .wemark_inline_table_td{
	display: table-cell;
}
.wemark_inline_table_th{
	background:#f0f0f0;
}
.wemark_inline_strong{
	font-weight: 700;
	padding:0 10rpx;
	word-wrap:break-word;
}
.wemark_inline_em{
	font-style: italic;
	padding:0 10rpx;
	word-wrap:break-word;
}
.wemark_inline_strong_em{
	font-style: italic;
	font-weight: 700;
	padding:0 10rpx;
	word-wrap:break-word;
}
.wemark_inline_deleted{
	text-decoration: line-through;
	padding:0 10rpx;
	word-wrap:break-word;
}
.wemark_inline_image{
	width:100%;
	height:auto;
}
.wemark_inline_code{
	background: #f9f2f4;
	color: #ef3866;
	padding: 0 6rpx;
	word-wrap: break-word;
	border-radius: 4rpx;
}
.wemark_inline_text{
	word-wrap:break-word;
}
.wemark_inline_link{
	display: inline;
	color: #009a61;
	word-wrap:break-word;
}
