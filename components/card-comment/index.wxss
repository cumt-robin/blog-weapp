.btn-mini {
  padding:0 4px;
  display:inline-block;
  line-height:24px;
}

.btn-mini >text {
  font-size: 12px;
  vertical-align:top;
  display:inline-block;
  margin-left: 2px;
  color: #999;
}

.btn-hover {
  color:#333;
  background-color:#eee;
}

.btn-hover >text {
  color: #333;
}

.icon-in-btn {
  width: 16px;
  height: 16px;
}

.textarea-wrap {
  text-align: center;
  margin-top: 10px;
}
.textarea {
  display: inline-block;
  border:1px solid #ccc;
  padding:10px;
  text-align:left;
  box-sizing:border-box;
}